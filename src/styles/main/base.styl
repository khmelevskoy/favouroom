meyer-reset();
box-sizing-reset();

html {
  font-size: 14px;
  font-family: 'Proxima Nova', Helvetica, Arial, sans-serif;
  background: #fff;
  color: #000;
}


html, body {
  height: 100%;
  min-height: 100%;
}

a {
  color: inherit;
  text-decoration: none;
}

img {
  max-width: 100%;
  height: auto;
}

.container {
  margin: 0 auto;
  padding: 0 10px;

  +breakpoint(desktop) {
    width: 720px;
  }

  +breakpoint(mobile) {
    max-width: 414px;
  }
}
